{

  "name": "Airius Webextension",
  "version": "1",
  "manifest_version": 2,
  "browser_specific_settings": {
    "gecko": {
      "id": "airius-webextension@mozilla.org",
      "strict_min_version": "53a1"
    }
  },

  "icons": {
    "48": "icons/placeholder.png"
  },

  "browser_action": {
    "browser_style": true,
    "default_icon": "icons/placeholder.png",
    "default_popup": "popup/menu.html"
  },

  "permissions": [
    "identity",
    "notifications",
    "*://www.googleapis.com/*",
    "*://accounts.google.com/*"
  ],

  "background": {
    "scripts": [
      "background/authorize.js"
    ]
  }
}
